{
    "compilerOptions": {
      "outDir": "./cjs",
      "module": "commonjs",
      "target": "es2017",
      "esModuleInterop": true,
      "moduleResolution": "Node",
      "checkJs": false,
      "alwaysStrict": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strict": true,
      "strictFunctionTypes": true,
      "types": [ "node" ]
    },
    "include": ["./src/**/*"],
  }